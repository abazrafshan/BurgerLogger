<body id="backgroundcolor">


<div class="container-fluid">
    <h1 class = "center">The Burger-Logger!</h1><hr>
    <div class="row">
        
        <div class = "col-md-5">
 
            
            </div>
            <div class ="col-md-2">
                
                <h2 class = "center">Create a Burger</h2><br>
                {{!-- create burger form --}}
                    <form class = "create-form">
                        <div class = "form-group textareasize">
                            <input type = "text" id = "burger" size = "26" name = "burgername">
                        </div>
                        <div>
                            {{!-- user can select if burger they want to add is devoured or uneaten --}}
                            <label for="devo">Devoured?</label><br>
                            <input type="radio" name = "devoured" value="1">Devoured!<br>
                            <input type="radio" name = "devoured" value="0">Uneaten

                        </div>
                        {{!-- submit button for user to add burger to database --}}
                        <button type = "submit">Submit Burger</button>
                    <h7>Enter a burger you want to eat, click the Submit button</h7>
                    </form>
                    </div>
                    <div class ="col-sm-5">

                    </div>
    </div>
</div>
<hr>
<div class="container">
    <div class="row">
        <div class="col-md-6 float-left">
            <h2 class = "center">Burgers ready to be devoured</h2><br>
            {{!-- loops through burgers object --}}
            <ul class="list-group">
                {{#each burgers}}
                {{!-- if row property is not devoured, then list it --}}
                    {{#unless devoured}}
                    {{!-- render li elements using partial --}}
                    <li class="list-group-item fontsize" {{> burgers/burger-block devoured=false}}></li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 float-left">
            <h2 class = "center">Burgers that have been devoured</h2><br>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if devoured}}
                    <li class="list-group-item fontsize" {{> burgers/burger-block devoured=true}}></li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

</body>